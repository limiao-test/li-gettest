package com.lmj.mian;
/**
 * 
 *家庭成员
 *属性：  爷爷  奶奶  妈妈
 *方法：  起床  工作  玩  睡觉  
 *
 */
public class Family {
  //属性
    private Grandma grandma=null;
    private Grandpa grandpa=null;
    private Mum mum=null;
    //构造
    public Family(Grandma grandma,Grandpa grandpa,  Mum mum ){
    	this.grandma=grandma;
    	this.grandpa=grandpa;
    	this.mum=mum;    			
    }
    //方法
    public void infor(){
    	grandma.infor();
    	grandpa.infor();
    	mum.infor();    	
    }
    public void daystart(){
    	grandma.getup();
    	grandpa.getup();
    	mum.getup();
    }
    public void   worke(){
    	grandma.worke();
    	grandpa.worke();
    	mum.worke(); 
    }
    public void  play(){
    	grandma.play();
    	grandpa.play();
    	mum.play(); 
    }
    public void   dayend(){
    	grandma.sleep();
    	grandpa.sleep();
    	mum.sleep(); 
    }
    public void   day(){
    	daystart();
		worke();
		play();
		dayend();
    }
    
    
	public Grandma getGrandma() {
		return grandma;
	}
	public void setGrandma(Grandma grandma) {
		this.grandma = grandma;
	}
	public Grandpa getGrandpa() {
		return grandpa;
	}
	public void setGrandpa(Grandpa grandpa) {
		this.grandpa = grandpa;
	}
	public Mum getMum() {
		return mum;
	}
	public void setMum(Mum mum) {
		this.mum = mum;
	}
    
}
